<div class="container-seven">
  <h2>Liste des utilisateurs</h2>
  <ul class="client-contact-list">
    <% if current_user.access_level == 'super admin' %>
      <li>
        <%= link_to new_user_path do %>
          <div class="client-company-card">
            <img class='client-company-logo-index' src='https://www.pecora.com/wp-content/uploads/2015/11/new.png'>
            <div>
              <p>Add a new user</p>
              <p></p>
            </div>
          </div>
        <% end %>
      </li>
    <% end %>
    <% @users.each do |user| %>
      <li>
        <%= link_to user_path(user) do %>
          <div class="client-contact-card">
            <img class='client-company-logo-index' src='<%= "#{user.picture}" %>'>
            <div>
              <p><%= user.name %></p>
              <p><%= user.email %></p>
              <p><%= user.access_level %></p>
            </div>
          </div>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
