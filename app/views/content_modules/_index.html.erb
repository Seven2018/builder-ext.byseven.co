<div id="items">
  <% if session.content_modules.empty? %>
    <div class="empty-mod">
      <p> <i class="fas fa-plus-circle"></i> </p>
      <p> <%= "Please add content" %> </p>
    </div>
  <% else %>
    <% session.content_modules.each do |mod| %>
    <% if mod.position == 1 %>
      <% @start = session.start_time %>
    <% else %>
      <% @duration = session.content_modules.find_by(position: (mod.position - 1 )).duration.minutes %>
      <% @start += @duration %>
    <% end %>
    <%= render "content_modules/mod_card", mod: mod, session: session, start: @start %>
    <% end %>
  <% end %>
</div>
