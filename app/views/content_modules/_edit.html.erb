<div class="modal-content">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <div id="modal-title" style=" display: flex; justify-content: space-between;">
      <h3 class="modal-title" id="myModalLabel"><%= mod.title %></h3>
    </div>
  </div>
  <div class="modal-body" id="modalNewBookinBody">
    <%= simple_form_for [mod.session.project, mod.session, mod] do |f| %>
      <%= f.input :title %>
      <div class="mod-date">
        <%= f.input :format %>
        <%= f.input :duration, input_html: { min: '0' } %>
        <%= f.input :chapter, :collection => %w[ Communication Developpement-Personnel Innovation Management Négociation Stratégie Leadership ] %>
      </div>
      <%= f.text_area :description, style: 'width: 100%; height: 300px;' %>
  </div>
  <div class="modal-footer" id="modalNewBookingFooter">
    <div>
      <%= f.button :submit, class: 'btn btn-edit' %>
      <% end %>
    </div>
  </div>

    </div>
  </div>
</div>
