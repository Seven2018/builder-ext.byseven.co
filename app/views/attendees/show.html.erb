<div class="container-seven-large">
  <%= link_to attendees_path(client_company_id: @attendee.client_company.id), class: 'btn return-arrow' do %><i class="fas fa-arrow-left"></i><% end %>
  <div class='centered-card-show'>
    <div class="index-card-small-show">
      <div style='display:flex;flex-direction:row;'>
        <div class='user-picture-show'>
          <img src='<%= @attendee.client_company.logo %>' alt="" class='client-company-logo-show'>
        </div>
      </div>
      <div class="user-info">
        <p>Lastname: <strong><%=  @attendee.lastname %></strong></p>
        <p>Firstname: <strong><%=  @attendee.firstname %></strong></p>
        <p>Email: <%= @attendee.email %></p>
        <p>Employee ID: <%= @attendee.employee_id %></p>
      </div>
    </div>
    <ul class="client-contact-list">
      <p>Trainings</p>
      <% @attendee.trainings.each do |training| %>
        <li>
          <%= link_to training_path(training) do %>
            <div class="index-card-large index-card-small">
              <img class='client-company-logo-index' src='<%= "#{training.client_company.logo}" %>'>
              <div class="client-company-type-address">
                <p><%= training.title %></p>
                <div>
                  <p><%= "From #{training.start_time.strftime('%d/%m/%Y')} to #{training.end_time.strftime('%d/%m/%Y')}" %></p>
                </div>
              </div>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>


