<div class="modal-content">
  <div class="modal-header">
    <div id="modal-title" style=" display: flex; justify-content: space-between;">
      <h3 class="modal-title" id="myModalLabel"><%= "Link a theory" %></h3>
    </div>
    <button type="button" class="btn btn-icon-close" data-dismiss="modal" aria-label="Close"><i class="fas fa-times"></i></button>
  </div>
  <div class="modal-body" id="modalNewBookinBody">
    <%= simple_form_for [@workshop.session.training, @workshop.session, @workshop, @theory_workshop] do |f| %>
        <%= f.input :theory, :collection => Theory.all, :label_method => :name, include_blank: false %>
  </div>
  <div class="modal-footer" id="modalNewBookingFooter">
    <div>
      <%= f.button :submit, "Link", class: 'btn btn-edit' %>
      <% end %>
    </div>
  </div>
</div>
