<div class="container-seven">
  <h2>Ajouter un contenu</h2>

  <%= simple_form_for @content do |f| %>
    <%= f.input :title %>
    <%= f.input :duration, input_html: { min: '0' } %>
    <%= f.input :description, input_html: { class: 'editor' }%>
    <%= f.association :theme, collection: Theme.order('name ASC'), include_blank: false, allow_blank: false %>
     <script>
      ClassicEditor
              .create( document.querySelector( '.editor' ), {
              } )
              .then( editor => {
                                        console.log( editor );
                                } )
              .catch( error => {
                      console.error( error );
              } );
    </script>
    <p class="center-button"> <%= f.submit class: 'btn btn-edit' %> </p>
  <% end %>
</div>
