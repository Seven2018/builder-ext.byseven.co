<div class="container-seven">
  <div class="training-info-headers">
    <%= link_to contents_path do %><i class="fas fa-arrow-left"></i><% end %>
    <div class="show-control-links">
      <% if ['super admin', 'admin', 'training manager'].include? current_user.access_level %>
        <%= link_to edit_content_path do %>
          <button class="btn btn-edit">Editer ce contenu</button>
        <% end %>
      <% end %>
    </div>
  </div>
  <h2><%= @content.theme.name %></h2>
  <br>
  <h4><%= @content.title %> - (<%= @content.duration %> minutes)</h4>
  <br>
  <a class="edit-fafa" data-toggle='modal' data-target='#viewImage'><img src="<%= @content.description %>" alt="" style='height:150px;'></a>
  <div id='content-mods'>
    <div>
      <h4>Liste des modules</h4>
      <%= link_to new_content_content_module_path(@content) do %>
        <i class="fas fa-plus"></i>
      <% end %>
    </div>
    <% @content.content_modules.order('position ASC').each do |mod| %>
      <div class='module-card'>
        <div class="module-card-infos">
        <h5><%= link_to mod.title, content_content_module_path(@content, mod) %></h5>
        <%= mod.instructions.html_safe %>
        <% if mod.logistics %>
          <div class='content-logistics'><%= mod.logistics.html_safe %></div>
        <% end %>
        <% unless mod.action2.nil? %>
          <p class=content-actions>Action 1 : <%= mod.action1.name %></p>
          <p class=content-actions>Action 2 : <%= mod.action2.name %></p>
        <% else %>
          <p class=content-actions>Action : <%= mod.action1.name %></p>
        <% end %>
        </div>
        <div class="module-card-controls">
          <p><%= mod.duration %> min</p>
          <%= link_to edit_content_content_module_path(@content, mod) do %>
            <i class="fas fa-edit"></i>
          <% end %>
          <%= link_to content_content_module_path(@content, mod), method: :delete, data: { confirm: 'Are you sure ?'} do %>
            <i class="fas fa-trash"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="viewImage" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document" style="border-radius: 20px">
    <img src="<%= @content.description %>" alt="">
  </div>
</div>
