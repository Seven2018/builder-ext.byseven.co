<div class="modal-content">
  <div class="modal-header">
    <div id="modal-title" style="display: flex; justify-content: space-between;">
      <h3 class="modal-title" id="myModalLabel">New form</h3>
    </div>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  </div>
  <div class="modal-body" id="modalNewBookinBody">
    <%= simple_form_for [@training, Form.new] do |f| %>
      <%= f.input :title %>
      <%= collection_check_boxes(:form, :session_ids, @training.sessions.order('date ASC').where.not(attendee_number: nil), :id, :title) do |b| %>
        <%= b.label class: 'label-checkbox', style: 'color:black;' do %>
          <%= b.check_box + b.text %>
        <% end %>
      <% end %>
      <p>Reminder : Sessions must have an max number of participant to be visible here</p>
      <div class='modal-control'>
        <%= button_tag :submit, class: 'btn btn-edit-green btn-icon', data: { toggle: 'tooltip' }, title: 'Save' do %>
          <i class="fas fa-save"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
