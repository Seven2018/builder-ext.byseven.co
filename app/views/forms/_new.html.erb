<div class="modal-content">
  <div class="modal-header">
    <div id="modal-title" style="display: flex; justify-content: space-between;">
      <h3 class="modal-title" id="myModalLabel">New form</h3>
    </div>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  </div>
  <div class="modal-body" id="modalNewBookinBody">
    <%= simple_form_for [@training, Form.new] do |f| %>
      <%= f.input :title %>
      <%= collection_check_boxes(:form, :session_ids, @training.sessions.order('date ASC'), :id, :title) do |b| %>
        <%= b.label class: 'label-checkbox', style: 'color:black;' do %>
          <%= b.check_box + b.text %>
        <% end %>
      <% end %>
      <div style="display:flex;justify-content:center;margin-top:30px;">
        <%= button_tag :submit, class: 'btn btn-edit-green btn-edit-disk' do %>
          <i class="fas fa-save"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
