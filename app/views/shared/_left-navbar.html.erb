<div class="left-navbar">
  <div class="dropdown">
    <div class="left-navbar-top">
      <% if user_signed_in? %>
        <img src='<%= "#{current_user.picture}" %>' class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
      <% end %>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li>
          <%= link_to "Log out", destroy_user_session_path, method: :delete %>
        </li>
      </ul>
    </div>
  </div>
  <div class="left-navbar-middle">
    <%= link_to trainings_path, style: 'color: white', class: 'left-buttons' do %>
      <div class="left-menu-list">
        <i class="fas fa-tasks"></i> <div class="left-menu-title"><p>Trainings</p></div>
      </div>
    <% end %>
    <%= link_to contents_path, style: 'color: white', class: 'left-buttons' do %>
      <div class="left-menu-list">
        <i class="fas fa-toolbox"></i> <div class="left-menu-title"><p>Workshops</p></div>
      </div>
    <% end %>
    <%= link_to client_companies_path, style: 'color: white', class: 'left-buttons' do %>
      <div class="left-menu-list">
        <i class="far fa-copyright"></i> <div class="left-menu-title"><p>Customers</p></div>
      </div>
    <% end %>
    <%= link_to users_path, style: 'color: white', class: 'left-buttons' do %>
      <div class="left-menu-list">
        <i class="fas fa-user-tie"></i> <div class="left-menu-title"><p>Users</p></div>
      </div>
    <% end %>
    <%= link_to actions_path, style: 'color: white', class: 'left-buttons' do %>
      <div class="left-menu-list">
        <i class="fas fa-running"></i> <div class="left-menu-title"><p>Actions</p></div>
      </div>
    <% end %>
    <%= link_to theories_path, style: 'color: white', class: 'left-buttons' do %>
      <div class="left-menu-list">
        <i class="fas fa-book"></i> <div class="left-menu-title"><p>Library</p></div>
      </div>
    <% end %>
    <% if user_signed_in? && (['super admin', 'admin'].include? current_user.access_level) %>
      <%= link_to report_path, style: 'color: white', class: 'left-buttons' do %>
        <div class="left-menu-list">
          <i class="fas fa-chart-bar"></i> <div class="left-menu-title"><p>Reports</p></div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="left-navbar-bottom">
    <%= link_to root_path, class: "left-navbar-logo" do %>
      <%= image_tag "logo-seven-navbar.png" %>
    <% end %>
  </div>
</div>
