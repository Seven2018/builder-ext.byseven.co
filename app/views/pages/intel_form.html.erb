<script>
  if ($("#subscription_event1").is(":checked")) {
    $('#toggle1').click();
    $('.sub1').css("opacity", 0);
    $('.thanks1').css("opacity", 1);
    $('#toggle1').parent().parent().css("background", '#12BBD4');
  }
  if ($("#subscription_event2").is(":checked")) {
    $('#toggle2').click();
    $('.sub2').css("opacity", 0);
    $('.thanks2').css("opacity", 1);
    $('#toggle2').parent().parent().css("background", '#12BBD4');
  }

  $('.toggle').click(function() {
    if ($(this).is(":checked")) {
      $(".sub").css("opacity", 0);
      $(".thanks").css("opacity", 1);
      $(this).parent().parent().css("background", '#12BBD4');
    }
    else if ($(this).is(":not(:checked)")) {
      $(".sub").css("opacity", 1);
      $(".thanks").css("opacity", 0);
      $(this).parent().parent().css("background", '#FFC65A');
    }
  });
</script>

