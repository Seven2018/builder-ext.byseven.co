<div class="container-seven container-seven-viewer">
  <%= link_to workshop_viewer_path(@workshop_module.workshop) do %>
    <i class="fas fa-arrow-left"></i>
  <% end %>
  <h2><%= @workshop_module.title %></h2>

  <p><%= @workshop_module.instructions.html_safe %></p>
  <p><%= @workshop_module.duration %> minutes</p>
  <p><%= @workshop_module.url1 %></p>
  <p><%= @workshop_module.url2 %></p>
  <p><%= @workshop_module.logistics %></p>
 <% if @workshop_module.action1 %>
      <p>Action 1 (participant) : <%= @workshop_module.action1.name %></p>
    <% end %>
    <% if @workshop_module.action2 %>
      <p>Action 2 (participant) : <%= @workshop_module.action2.name %></p>
    <% end %>
  <p><%= @workshop_module.comments %></p>
</div>
