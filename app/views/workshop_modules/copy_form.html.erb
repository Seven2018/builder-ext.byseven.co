        <% end %>
        <%= link_to training_session_workshop_copy_workshop_module_path(@workshop_module.workshop.session.training, @workshop_module.workshop.session, @workshop_module.workshop, @workshop_module, copy_here: true), class: 'btn btn-edit-green btn-icon copy-here-button', data: { toggle: 'tooltip' }, title: 'Copy here' do %>
          <i class="fas fa-angle-double-down"></i>
        <% end %>
