<div class="container-seven-large">
  <div id='page-controls'>
    <%= link_to training_session_workshop_path(@workshop_module.workshop.session.training, @workshop_module.workshop.session, @workshop_module.workshop), class: 'return-arrow' do %>
      <i class="fas fa-arrow-left"></i>
    <% end %>
      <div class="page-controls-buttons flex-row-between-centered">
        <%= link_to edit_training_session_workshop_workshop_module_path(@workshop_module.workshop.session.training, @workshop_module.workshop.session, @workshop_module.workshop, @workshop_module), data: { toggle: 'tooltip' }, title: 'Edit', class: 'btn btn-edit-yellow btn-icon' do %>
          <i class="fas fa-pen"></i>
        <% end %>
        <%= link_to training_session_workshop_workshop_module_path(@workshop_module.workshop.session.training, @workshop_module.workshop.session, @workshop_module.workshop, @workshop_module), method: :delete, data: { toggle: 'tooltip', confirm: 'Are you sure ?'}, title: 'Delete', class: 'btn btn-edit-red btn-icon' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <%= link_to training_session_workshop_copy_form_workshop_module_path(@workshop_module.workshop.session.training, @workshop_module.workshop.session, @workshop_module.workshop, @workshop_module), class: 'btn btn-edit-green btn-icon', data: { toggle: 'tooltip' }, title: 'Copy' do %>
          <i class="fas fa-copy"></i>
        <% end %>
      </div>
  </div>
  <div class="middle-info-workshop">
    <h4><%= @workshop_module.title %> - <i class="fas fa-stopwatch fa-1x"></i> <%= @workshop_module.duration %> min</h4>
    <br>
    <p><%= @workshop_module.instructions %></p>
    <% if @workshop_module.comments && @workshop_module.comments != "" %>
      <p>Comments : <%= @workshop_module.comments %></p>
    <% end %>
    <div class='content-logistics'>
      <p class='logistics-label'>Logistics: </p>
     <ul><li><%= @workshop_module.logistics.html_safe %></li></ul>
    </div>
    <div class="content-actions">
      <% if @workshop_module.action1 %>
        <p class='logistics-label'>Actions:</p>
        <ul><li> <%= @workshop_module.action1.name %></li></ul>
      <% end %>
     </div>
      <% if @workshop_module.action2 %>
        <p class='logistics-label'></p>
        <ul><li> <%= @workshop_module.action2.name %></li></ul>
      <% end %>
  </div>
</div>

