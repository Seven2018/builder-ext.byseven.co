<div id="container-login">
  <div id="login-div">
    <div class="login-title flex-row-around-centered">
      <h2>Builder by</h2>
      <img src="https://byseven.co/assets/img/LOGO_SEVEN.png" alt="" height='50px'>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <div class="form-sign-in-options flex-row-between-centered">
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name) %>
          <% end %>
        </div>
      </div>

      <div class="form-actions flex-row-between-centered">
        <%= f.button :submit, "Sign in", class: 'btn-edit-yellow btn-sign-in' %>
        <%= link_to user_google_oauth2_omniauth_authorize_path do %>
          <div class="google-btn">
            <div class="google-icon-wrapper">
              <img class="google-icon" src="https://upload.wikimedia.org/wikipedia/commons/5/53/Google_%22G%22_Logo.svg"/>
            </div>
            <p class="btn-text"><b>Sign in with google</b></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
