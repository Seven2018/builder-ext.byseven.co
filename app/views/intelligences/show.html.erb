<div class="container-seven-large">
  <%= link_to intelligences_path do %><i class="fas fa-arrow-left"></i><% end %>
  <h1><%= @intelligence.name %></h1>
  <div class="show-control-links">
    <% if current_user.access_level == 'admin' %>
      <a class="edit-fafa" data-toggle='modal' data-target='#editIntelligence'><i class="fas fa-pen"></i></a>
    <% end %>
  </div>
  <p><%= @intelligence.description %></p>
</div>

<!-- Modal -->
<div class="modal fade" id="editIntelligence" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog modal-lg" role="document" style="border-radius: 2rem">
    <%= render 'edit', intelligence: @intelligence %>
  </div>
</div>


