<div class="container">
  <%= link_to client_companies_path do %><i class="fas fa-arrow-left"></i><% end %>
  <div class="client-company-card-show">
    <div>
      <img src='<%= @client_company.logo %>' alt="" class='client-company-logo-show'>
      <div>
        <p><%=  @client_company.name %></p>
        <div class="show-control-links">
          <% if current_user.access_level == 'admin' %>
            <a class="edit-fafa" data-toggle='modal' data-target='#editClientCompany'><i class="fas fa-edit"></i></a>
          <% end %>
        </div>
      </div>
    </div>
    <p><%= @client_company.address %></p>
    <p><%= @client_company.description %></p>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="editClientCompany" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog modal-lg" role="document" style="border-radius: 20px">
    <%= render 'edit', content: @content %>
  </div>
</div>
