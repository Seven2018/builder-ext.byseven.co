<div class="container-seven-large" style="background-color: white">
  <h1 style="text-align: left;"><%= "Trainings Dashboard" %></h1>
  <div class="trainings-title">
    <ul class="nav nav-tabs">
      <li role="presentation"><a href="<%= trainings_path(page: 1, tab: 'upcoming') %>" class='tab-grayed'>Upcoming</a></li>
      <li role="presentation"><a href="<%= trainings_path(page: 1, tab: 'completed') %>" class='tab-grayed'>Completed</a></li>
      <li><%= link_to "Calendar", index_week_path, class: 'active' %></li>
    </ul>
    <% if (['super admin', 'admin', 'training manager'].include? current_user.access_level) %>
      <%= link_to new_training_path, id: "new-training" do %>
        <!-- <button class="btn btn-edit-yellow">New Training</button> -->
      <% end %>
    <% end %>
  </div>
  <div class="trainings-title calendar-tabs-div">
    <ul class="nav nav-tabs">
        <li><%= link_to "Weekly", index_week_path, class: 'calendar-tabs active' %></li>
        <li><%= link_to "Monthly", index_month_path, class: 'calendar-tabs' %></li>
    </ul>
  </div>
  <div id='week_display'>
    <%= render 'calendar-week', session: @sessions %>
  </div>
</div>
