<div class="container-seven" style="background-color: white">
  <h3 id='dashboard-title'><%= "Trainings Dashboard" %></h3>
  <div class="trainings-title">
    <ul class="nav nav-tabs">
      <% if params[:tab].nil? || params[:tab] == 'ongoing' %>
        <li role="presentation"><a href="#ongoing" data-toggle="tab" class="active">Ongoing trainings</a></li>
        <li role="presentation"><a href="#upcoming" data-toggle="tab">Upcoming trainings</a></li>
        <li role="presentation"><a href="#completed" data-toggle="tab">Completed trainings</a></li>
      <% elsif params[:tab] == 'upcoming' %>
        <li role="presentation"><a href="#ongoing" data-toggle="tab">Ongoing trainings</a></li>
        <li role="presentation"><a href="#upcoming" data-toggle="tab" class="active">Upcoming trainings</a></li>
        <li role="presentation"><a href="#completed" data-toggle="tab">Completed trainings</a></li>
      <% elsif params[:tab] == 'completed' %>
        <li role="presentation"><a href="#ongoing" data-toggle="tab">Ongoing trainings</a></li>
        <li role="presentation"><a href="#upcoming" data-toggle="tab">Upcoming trainings</a></li>
        <li role="presentation"><a href="#completed" data-toggle="tab" class="active">Completed trainings</a></li>
      <% end %>
      <li><%= link_to "Calendar", index_week_path %></li>
    </ul>
    <%= link_to new_training_path, id: "new-training" do %>
      <button class="btn btn-edit">New Training</button>
    <% end %>
  </div>
  <div class="tab-content">
    <% if params[:tab].nil? || params[:tab] == 'ongoing' %>
      <div role="tabpanel" class="tab-pane active" id="ongoing">
        <%= render 'ongoing', trainings: @trainings %>
      </div>
      <div role="tabpanel" class="tab-pane" id="upcoming">
        <%= render 'coming', trainings: @trainings %>
      </div>
      <div role="tabpanel" class="tab-pane" id="completed">
        <%= render 'completed', trainings: @trainings %>
      </div>
    <% elsif params[:tab] == 'upcoming' %>
      <div role="tabpanel" class="tab-pane" id="ongoing">
        <%= render 'ongoing', trainings: @trainings %>
      </div>
      <div role="tabpanel" class="tab-pane active" id="upcoming">
        <%= render 'coming', trainings: @trainings %>
      </div>
      <div role="tabpanel" class="tab-pane" id="completed">
        <%= render 'completed', trainings: @trainings %>
      </div>
    <% elsif params[:tab] == 'completed' %>
      <div role="tabpanel" class="tab-pane" id="ongoing">
        <%= render 'ongoing', trainings: @trainings %>
      </div>
      <div role="tabpanel" class="tab-pane" id="upcoming">
        <%= render 'coming', trainings: @trainings %>
      </div>
      <div role="tabpanel" class="tab-pane active" id="completed">
        <%= render 'completed', trainings: @trainings %>
      </div>
    <% end %>
  </div>
</div>
