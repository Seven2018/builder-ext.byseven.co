<div class="container-new-form">
  <h2>Créer une nouvelle formation</h2>

  <%= simple_form_for @training do |f| %>
    <%= f.input :title, label: 'Titre' %>
    <%= f.input :client_contact_id, :collection => ClientContact.all.order(:name), :label_method => lambda { |client| "#{client.client_company.name} | #{client.name}" }, :label => 'Client', :include_blank => false %>
    <%= f.input :start_date, as: :string, required: true, input_html: {class: "datepicker"}, label: 'Date de début' %>
    <%= f.input :end_date, as: :string, input_html: {class: "datepicker"}, label: 'Date de fin' %>
    <%= f.input :participant_number, input_html: { min: '0' }, label: 'Nombre de participants' %>
    <p class="center-button"> <%= f.submit class: 'btn btn-edit' %> </p>
  <% end %>
</div>
