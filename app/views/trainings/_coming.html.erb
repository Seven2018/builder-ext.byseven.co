<div class="row" style="background-color: white; margin-right: 0;">
  <% result_fut = [] %>
  <% trainings.each do |training| %>
    <% if training.start_date > Date.today %>
      <div class="col-xs-4" style="display: flex; justify-content: center;">
        <%= link_to training_path(training) do %>
        <div class="card" id="card-index">
          <div class="card-main">
            <div class='client-logo' style="background-image: url(<%= training.client_contact.client_company.logo %>); background-size: 50px 50px; background-repeat: no-repeat;"></div>
            <h5><%= training.title %></h5>
            <% result_fut << training %>
            <div class="card-infos">
              <div class='card-infos-elements'><i class="fas fa-user"></i><%= " #{training.participant_number} people" %></div>
              <div class='card-infos-elements'><i class="far fa-calendar-alt"></i><%= " From #{training.start_date.strftime('%d/%m/%y')} to #{training.end_date.strftime('%d/%m/%y')}" %>
              </div>
            </div>
          </div>
          <div class="card-footer">
              <h5>Plus d'infos</h5>
          </div>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
    <% if result_fut.empty? %>
      <div class="col-xs-4" style="display: flex; justify-content: center;">
        <div class="card">
          <div class="card-main">
            <%= "Empty" %>
          </div>
          <div class="card-footer"></div>
        </div>
      </div>
    <% end %>
</div>
