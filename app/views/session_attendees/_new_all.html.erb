<div class="modal-content">
  <div class="modal-header">
    <div id="modal-title" style="display:flex;justify-content:center;text-align:center;">
      <h3 class="modal-title" id="myModalLabel">Add Participants to <%= training.title %></h3>
    </div>
    <button type="button" class="btn btn-icon-close" data-dismiss="modal" aria-label="Close"><i class="fas fa-times"></i></button>
  </div>
  <div class="modal-body" id="modalNewBookinBody" style='display:flex;flex-direction:column;align-items:center;'>
    <%= simple_form_for :link, url: link_attendees_to_training_path(training) do |f| %>
      <div style="display:flex;justify-content:space-between;flex-direction:column;">
        <p><%= @session.training.client_company.name %></p>
        <% checked = [] %>
        <% training.attendees.each {|x| checked << x.id } %>
        <%= f.input_field :attendee_ids, as: :check_boxes, collection: Attendee.where(client_company_id: training.client_contact.client_company.id).order('lastname ASC').map{|x|["#{x.firstname} #{x.lastname}", x.id]}, checked: checked %>
      </div>
      <div class='modal-control'>
        <%= button_tag :submit, class: 'btn btn-edit-green btn-icon', data: { toggle: 'tooltip' }, title: 'Save' do %>
          <i class="fas fa-save"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
