<div class="modal-content">
  <div class="modal-header">
    <div id="modal-title" style="display:flex;justify-content:center;text-align:center;">
      <h3 class="modal-title" id="myModalLabel"><%= "Demande de rÃ©servation pour #{@merchandise.name}" %></h3>
    </div>
    <button type="button" class="btn btn-edit-cross" data-dismiss="modal" aria-label="Close"><i class="fas fa-times"></i></button>
  </div>
  <div class="modal-body" id="modalNewBookinBody" style='display:flex;flex-direction:column;align-items:center;'>
    <%= simple_form_for @booking do |f| %>
      <div style=" display:flex;justify-content:space-between;flex-direction:column;">
        <%= f.input :attendee_number, label: 'Nombre de participants', input_html: { value: 0, min: 0 } %>
        <%= f.input :start_date, as: :string, input_html: { value: Date.today, class: 'datepicker'}, label: 'Start date' %>
        <%= f.input :end_date, as: :string, input_html: { value: (Date.today + 1.months), class: 'datepicker'}, label: 'End date' %>
      </div>
      <div style="display:flex;justify-content:center;margin-top:30px;">
        <%= button_tag :submit, class: 'btn btn-edit-green btn-edit-disk', name: 'merchandise', value: @merchandise.id do %>
          <i class="fas fa-save"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
