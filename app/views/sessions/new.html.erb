<div class="container-new-form">
  <h1>Ajouter une session</h1>

  <%= simple_form_for [@training, @session] do |f| %>
    <%= f.input :title, label: 'Titre' %>
    <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.input :duration, label: "Durée (heures)" %>
    <%= f.input :start_time, label: 'Heure de début', as: :string, required: false, input_html: {class: "timepicker"} %>
    <%= f.input :end_time, label: 'Heure de fin', as: :string, required: false, input_html: {class: "timepicker"} %>
    <p class="center-button"> <%= f.submit class: 'btn btn-edit' %> </p>
    <p class="center-button"> <%= link_to 'Cancel', training_path(@training), class: 'btn btn-edit' %></p>
  <% end %>
</div>
