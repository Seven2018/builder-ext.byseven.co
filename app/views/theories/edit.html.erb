<div class="container-seven-large">
  <div id='page-controls'>
    <%= link_to theories_path, class: 'btn return-arrow' do %>
      <i class="fas fa-arrow-left"></i>
    <% end %>
  </div>
  <h3>Edit <%= @theory.name %></h3>

  <%= simple_form_for @theory do |f| %>
    <%= f.input :name %>
    <%= f.label :description %>
    <%= f.cktext_area :description %>
    <%= f.label :references %>
    <%= f.cktext_area :references %>
    <div style=" display: flex; justify-content: space-between;">
      <%= button_tag type: 'submit', class: 'btn btn-edit-green btn-icon' do %>
        <i class="fas fa-save"></i>
      <% end %>
      <%= link_to theory_path(@theory), method: :delete, data: { confirm: 'Are you sure ?'} do %>
        <button class="btn btn-edit-red btn-icon">
          <i class="fas fa-trash-alt"></i>
        </button>
      <% end %>
    </div>
  <% end %>
</div>
