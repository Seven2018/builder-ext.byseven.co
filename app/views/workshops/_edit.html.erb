<div class="modal-content">
  <div class="modal-header">
    <div id="modal-title" style=" display: flex; justify-content: space-between;">
      <h3 class="modal-title" id="myModalLabel"><%= mod.title %></h3>
    </div>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  </div>
  <div class="modal-body" id="modalNewBookinBody">
    <%= simple_form_for [mod.session.training, mod.session, mod] do |f| %>
      <%= f.input :title, label: 'Titre' %>
      <div class="mod-date">
        <%= f.input :duration, input_html: { min: '0' }, label: 'DurÃ©e (min)' %>
        <%= f.association :theme, :collection => Theme.all, selected: mod.theme_id %>
      </div>
      <%= f.text_area :description, style: 'width: 100%; height: 300px;' %>
  </div>
  <div class="modal-footer" id="modalNewBookingFooter">
    <div>
      <%= link_to training_session_workshop_path(mod.session.training, mod.session, mod), method: :delete, data: { confirm: 'Are you sure ?'} do %>
        <button class="btn btn-edit">
          <i class="fas fa-trash-alt"></i>
        </button>
      <% end %>
      <%= f.button :submit, 'Sauvegarder', class: 'btn btn-edit' %>
      <% end %>
    </div>
  </div>
</div>

