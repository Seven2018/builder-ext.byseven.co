<div class="container-seven">
  <div class="training-info-headers">
    <%= link_to actions_path, class: 'btn return-arrow' do %>
      <i class="fas fa-arrow-left"></i>
    <% end %>
  </div>
  <h3>Ajouter une action</h3>
  <%= simple_form_for @action, as: :act do |f| %>
    <%= f.input :name %>
    <%= f.input :description, :input_html => {:rows => 5, style: 'width:100%;'} %>
    <%= f.association :intelligence, collection: Intelligence.all, include_blank: false %>
    <div class="center-button">
      <%= button_tag type: 'submit', class: 'btn btn-edit-green btn-edit-disk' do %>
        <i class="fas fa-save"></i>
      <% end %>
    </div>
  <% end %>

  <% Intelligence.all.each do |intel| %>
    <div>
      <br>
      <p><%= intel.name %></p>
      <br>
      <p><%= intel.description %></p>
      <br>
    </div>
  <% end %>
</div>
