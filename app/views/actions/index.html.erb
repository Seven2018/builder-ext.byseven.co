<div class="container-seven">
  <div class='flex-title'>
    <h2>Liste des actions</h2>
    <% if ['super admin', 'admin', 'training manager'].include? current_user.access_level %>
      <%= link_to new_action_path do %>
        <i class="fas fa-plus"></i>
      <% end %>
    <% end %>
  </div>
  <ul>
  <% @actions.each do |action| %>
    <li><%= link_to "#{action.name} : #{action.intelligence.name}", action_path(action) %>  <a class="edit-fafa" data-toggle='modal' data-target='#editAction<%= action.id %>'><i class="fas fa-edit"></i></a></li>
    <!-- Modal -->
    <div class="modal fade" id="editAction<%= action.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog modal-lg" role="document" style="border-radius: 20px">
        <%= render 'edit', action: action %>
      </div>
    </div>
  <% end %>
  </ul>
</div>
