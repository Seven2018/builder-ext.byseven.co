<div class="container-seven">
  <h1>Contacts List</h1>
  <ul class="client-contact-list">
    <% @client_contacts.each do |contact| %>
      <li>
        <%= link_to client_contact_path(contact) do %>
          <div class="index-card-large index-card-small">
            <img class='client-company-logo-index' src='<%= "#{contact.client_company.logo}" %>'>
            <div>
              <p><%= contact.name %></p>
              <div>
                <p><%= contact.title %></p>
                <p><%= contact.email %></p>
              </div>
            </div>
          </div>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
